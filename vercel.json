{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",  
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/chat",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",    
      "dest": "/public/$1"
    }
  ]
}